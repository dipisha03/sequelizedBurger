
<div class="row">
  <center>

<!-- Left side (ready to eat) -->
    <div class="col-md-6">
        <h4 class="tiny_text">Ready to eat!</h4>
    <div id="ready_to_eat">

<!-- Dynamically Insert Ready Burgers Here -->
    {{#each burger}}
    {{#unless this.devoured}}
        <form method="POST" class="devour-form">
            <div class="input-group to-eat burgerz">
                <div class="form-control burger-id" value={{this.id}}><img src="/assets/img/burder0.png"><br>{{this.burger_name}}</div>
                <button class="btn btn-success devour-button" type="submit">Devour It!</button>
            </div>
        </form>
    {{/unless}}
    {{/each}}
    </div>
    </div>

<!-- Right side (already eaten) -->
    <div class="col-md-6">
      <h4 class="tiny_text">Devoured!</h4>
    <div id="already_eaten">

<!-- Dynamically Insert Eaten Burgers Here -->
    {{#each burger}}
    {{#if this.devoured}}
        <div class="input-group burgerz">
        <div class="form-control ateBurger">
            <img src="/assets/img/burger1.png">
            <br>
        {{this.burger_name}}
        </div> 
        <button class="btn btn-info whine-button" type="button" disabled="">Noms!</button>
        </div>
    {{/if}}
    {{/each}}
    </div>
    </div>
  </center>
</div>